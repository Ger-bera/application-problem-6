 <table class="table">
    <tbody>
     <% comments.each do |book_comment| %>
        <tr>
          <td>
            <%= attachment_image_tag(book_comment.user, :profile_image, :fill, size: "40", fallback: "no_image.jpg", class: "user") %>
            <%= link_to book_comment.user.name,user_path(book_comment.user.id) %>
            <%= book_comment.comment %>
            <% if book_comment.user == current_user %>
              <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote:true %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>